{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "keyword-spacing": [
            "error"
        ],
        "comma-spacing": [
            "error"
        ],
        "no-console": "off",
        "arrow-body-style": [
            "error",
            "as-needed"
        ]
    }
}